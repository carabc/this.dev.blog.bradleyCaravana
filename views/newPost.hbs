<div class="newPostContainer">
    <h1>Create a New Blog Post</h1>
    <form action="/blog/new" method="POST">
        <div class="form-group">
            <label for="header">Header</label>
            <input type="text" class="form-control" name="header">
        </div>
        <div class="form-group">
            <label for="subHeader">Sub Header</label>
            <input type="text" class="form-control" name="subHeader">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author">
        </div>
        <div class="form-group">
            <label for="heroImage">Hero Image</label>
            <input class="form-control" type="file" accept="image/*" name="heroImage">
        </div>
        <div class="form-group">
            <label for="bodyPicOne">Body Picture One</label>
            <input class="form-control" type="file" accept="image/*" name="bodyPicOne">
        </div>
        <div class="form-group">
            <label for="bodyPicTwo">Body Picture Two</label>
            <input class="form-control" type="file" accept="image/*" name="bodyPicTwo">
        </div>
        <div class="form-group">
            <label for="markdown">Body</label>
            <textarea name="markdown" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <button class="btn-dark" type='submit'>Submit</button>
    </form>
</div>
