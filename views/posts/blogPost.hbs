{{!-- If I'm logged in, show the add new post button --}}
{{#if showPlus}}
{{{makeNewPostButton}}}
{{/if}}
<section class="blog-post">
    <div class="header">
        {{#if showDelete}}
        <form action="/blog/delete/{{post._id}}?_method=DELETE" method="POST">
            <button type='submit' class="btn-red"><i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete Post</button>
        </form>

        {{/if}}
        {{#if showEdit}}
        <a href="/blog/edit/{{post._id}}" class="edit-btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            Edit
            Post</a>
        {{/if}}
        <h1 class="header">{{post.header}}</h1>
        <h3 class="subHeader subHeaderOne">{{post.subHeader}}</h3>
    </div>
    {{!-- <div class="blog-tag blog-tag__right">
        <img src="../images/me.jpg" alt="">
    </div> --}}
    <div class="metaInfo">
        <cite class="date">{{formatDate post.createdAt 'MMMM Do, YYYY'}} â€“ </cite>
        <cite class="author">By {{post.author}}</cite>
    </div>
    {{{post.sanitizedHtml}}}
</section>
