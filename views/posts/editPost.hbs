{{!-- EDIT POST FORM --}}
{{!-- If I'm logged in, show the add new post button --}}
{{#if showPlus}}
{{{makeNewPostButton}}}
{{/if}}
<div class="newPostContainer">
    <h1>Edit {{post.header}}</h1>
    <form action="/blog/edit/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="header">Header</label>
            <input type="text" class="form-control" name="header" value="{{post.header}}">
        </div>
        <div class="form-group">
            <label for="subHeader">Sub Header</label>
            <input type="text" class="form-control" name="subHeader" value="{{post.subHeader}}">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" class="form-control" name="author" value="{{post.author}}">
        </div>
        <div class="form-group">
            <label for="thumbnail">Thumbnail</label>
            <input class="form-control" name="thumbnail" type="file" accept="image/*" value="{{post.thumbnail}}">
        </div>
        <div class="form-group">
            <label for="markdown">Markdown</label>
            <textarea name="markdown" class="form-control" cols="30" rows="10">{{post.markdown}}</textarea>
        </div>
        <button class="btn-dark" type='submit'>Submit</button>
        <button href="/blog/{{post.slug}}" class="edit-btn">Cancel</button>
    </form>
</div>
